{
  "version": 2,
  "builds": [
    { "src": "apps/web/package.json", "use": "@vercel/next" },
    { "src": "apps/admin/package.json", "use": "@vercel/next" },
    { "src": "apps/api/package.json", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/apps/api/" },
    { "src": "/admin/(.*)", "dest": "/apps/admin/" },
    { "src": "/(.*)", "dest": "/apps/web/" }
  ]
}
